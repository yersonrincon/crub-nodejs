    <%  if (usuarios) { %>
    <div class="container mt-4">
    <div class="card border-secondary">
     <div class="card-header"> Editar Registro</div>
      <div class="card-body">
        <form action="/update" method="POST">
            <input id="id" name="id" value="<%= usuarios.id %>"  hidden>
        <div class="mb-3">
        <label for="nombre" class="form-label">NOMBRE</label>
         <input type="text" class="form-control" id="nombre"name="nombre" value="<%= usuarios.nombre %>" tabindex="1">
        </div>
        <div class="mb-3">
           <label for="apellido" class="form-label">APELLIDO</label>
           <input type="text" class="form-control" id="apellido"name="apellido" value="<%= usuarios.apellido %>" tabindex="1">
        </div>
        <div class="mb-3">
          <label for="direccion" class="form-label">DIRECCION</label>
           <input type="text" class="form-control" id="direccion"name="direccion" value="<%= usuarios.direccion %>" tabindex="1">
          </div>
          <div class="mb-3">
            <label for="edad" class="form-label">EDAD</label>
             <input type="text" class="form-control" id="edad"name="edad" value="<%= usuarios.edad %>" tabindex="1">
            </div>
        <div class="mb-3">
          <label for="nombre" class="form-label">GENERO</label>
          <select id="genero" name="genero" class="form-select" tabindex="2">
            <option <%= usuarios.genero== 'masculino' ? "selected" : '' %> value="masculino">MASCULINO</option>
            <option <%= usuarios.genero== 'femenino' ? "selected" :'' %>value="femenino">FEMENINO</option>
          </select>
        </div>
        <button type="submit" class="btn btn-primary" tabindex="5">Guardar</button>
        <a href="/" class="btn btn-secondary">Cancelar</a>
        </form>
      </div>
    </div>
   </div>
   <% } %>

